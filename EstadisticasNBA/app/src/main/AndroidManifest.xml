<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.estadisticasnba">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/nba_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/nba_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Minimal"
        android:usesCleartextTraffic="true">
        <activity android:name=".LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".AniadirJugadorActivity" />
        <activity android:name=".GraficoJugadorActivity" />
        <activity android:name=".DetallesJugadores" />
        <activity android:name=".JugadoresActivity" />
        <activity android:name=".EquiposActivity" />
        <activity android:name=".ConferenciaActivity" />
    </application>

</manifest>