<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blanco_roto"
    android:backgroundTint="@color/gris_oscuro"
    tools:context=".JugadoresActivity">

    <ImageView
        android:id="@+id/imgEquipoFondo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:contentDescription="@string/imagen_fondo_jugadores"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/nba" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/ftBtnAniadirJugador"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/RightNormalConstraint"
        android:layout_marginBottom="@dimen/bottomNormalConstraint"
        android:clickable="true"
        android:contentDescription="@string/imagen_a_adir_jugador"
        app:backgroundTint="@color/azul_nba"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@android:drawable/ic_menu_add" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvJugadores"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/leftNormalConstraint"
        android:layout_marginTop="@dimen/topNormalConstraint"
        android:layout_marginEnd="@dimen/RightNormalConstraint"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>